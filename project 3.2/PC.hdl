CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
      Or8Way(in[0]=load, in[1]=inc, in[2]=reset, in[3..7]=false, out=l1);

      Inc16(in=w1, out=w2);
      Mux16(a=w2, b=in, sel=load, out=w3);
      Mux16(a=w3, b=false, sel=reset, out=w4);

      Register(in=w4, load=l1, out=w1, out=out);
}